                android:layout_height="25dp"
                android:src="@drawable/logo_feelora_asli" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu 1"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

